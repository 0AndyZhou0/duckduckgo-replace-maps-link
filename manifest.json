{
  "author": "zhoua2001@gmail.com",
  "name": "Change Maps links in DuckDuckGo Search",
  "description": "Extension to add Maps links to the DuckDuckGo Search page",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon-pin.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.duckduckgo.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage"
  ]
}